<h1><%= @cocktail.name %></h1>

<h3>Ingredients</h3>

<div class="d-flex flex-column">
  <ol>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
      <strong><%= dose.ingredient.name %></strong> -
      <%= dose.description %>
      (<%= link_to 'delete', dose_path(dose), method: :delete %>)
    </li>
  <% end %>
  </ol>

  <div>
    <%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail) %>
    <%= link_to 'Back to Cocktails', cocktails_path %>
  </div>
</div>
